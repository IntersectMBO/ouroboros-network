name:                ntp-client
version:             0.0.1
license:             Apache-2.0
license-files:
  LICENSE
  NOTICE
category:            Network
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.20

flag demo
  description: Build a demo application
  default: False
  manual: True

library
  exposed-modules:      Network.NTP.Client
  other-modules:        Network.NTP.Client.Packet
                        Network.NTP.Client.Query
                        Network.NTP.Client.Trace
  build-depends:        async           >=2.2 && <2.3
                      , base            >=4.9 && <4.13
                      , binary          >=0.8 && <0.9
                      , bytestring      >=0.10 && <0.11
                      , contra-tracer   >=0.1 && <0.2
                      , network         >= 3.1 && <3.2
                      , stm             >=2.4 && <2.6
                      , time            >=1.6 && <1.10

  hs-source-dirs:       src
  default-language:     Haskell2010
  ghc-options:          -Wall
  default-extensions:   GeneralizedNewtypeDeriving
                        
test-suite test-ntp-client
  hs-source-dirs:     test, src
  main-is:            Test.hs
  other-modules:        Network.NTP.Client.Packet
  type:               exitcode-stdio-1.0
  build-depends:        base            >=4.9 && <4.13
                      , binary          >=0.8 && <0.9
                      , time            >=1.6 && <1.10
                      , QuickCheck
                      , tasty
                      , tasty-quickcheck
  default-language:   Haskell2010
  ghc-options:        -Wall

executable demo-ntp-client
  hs-source-dirs:     demo
  main-is:            Main.hs
  if flag(demo)
     buildable: True
  else
     buildable: False
  build-depends:        async           >=2.2 && <2.3
                      , base            >=4.9 && <4.13
                      , contra-tracer   >=0.1 && <0.2
                      , ntp-client
  default-language:   Haskell2010
  ghc-options:        -Wall
