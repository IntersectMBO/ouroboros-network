;
; LocalTxSubmission mini-protocol
;


; Reference implementation of the codec in:
; ouroboros-network/src/Ouroboros/Network/Protocol/LocalTxSubmission/Codec.hs

localTxSubmissionMessage
    = msgSubmitTx
    / msgAcceptTx
    / msgRejectTx
    / ltMsgDone

msgSubmitTx = [0, tx ]
msgAcceptTx = [1]
msgRejectTx = [2, rejectReason ]
ltMsgDone   = [3]

rejectReason = int
