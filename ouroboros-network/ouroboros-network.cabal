    ouroboros-network,
    ouroboros-network-api,
    ouroboros-network-framework,
    ouroboros-network-framework:testlib,
    ouroboros-network-mock,
    ouroboros-network-protocols,
    ouroboros-network-protocols:testlib,
    ouroboros-network-testing ^>=0.8,
