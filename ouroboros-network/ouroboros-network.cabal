  if os(windows)
    build-depends:     Win32-network                 <0.2.0.0,
                       Win32           >= 2.5.4.1 && <3.0

  ghc-options:         -Wall
                       -Wno-unticked-promoted-constructors
                       -fno-ignore-asserts
                       -threaded
                       -rtsopts
                       +RTS -T -RTS
  if flag(ipv6)
    cpp-options:       -DOUROBOROS_NETWORK_IPV6


