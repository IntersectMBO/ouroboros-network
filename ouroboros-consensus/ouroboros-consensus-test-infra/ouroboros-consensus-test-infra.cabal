name:                  ouroboros-consensus-test-infra
version:               0.1.0.0
synopsis:              Infrastructure for testing ouroboros-consensus
-- description:
license:               Apache-2.0
license-files:
  LICENSE
  NOTICE
copyright:             2019 Input Output (Hong Kong) Ltd.
author:                IOHK Engineering Team
maintainer:            operations@iohk.io
category:              Testing
build-type:            Simple
cabal-version:         >=1.10

source-repository head
  type:     git
  location: https://github.com/input-output-hk/ouroboros-network

library
  hs-source-dirs:      src
  exposed-modules:
                       Test.ThreadNet.General
                       Test.ThreadNet.Network
                       Test.ThreadNet.Ref.PBFT
                       Test.ThreadNet.TxGen
                       Test.ThreadNet.Util
                       Test.ThreadNet.Util.Expectations
                       Test.ThreadNet.Util.HasCreator
                       Test.ThreadNet.Util.NodeJoinPlan
                       Test.ThreadNet.Util.NodeRestarts
                       Test.ThreadNet.Util.NodeTopology

                       Test.Util.Blob
                       Test.Util.BlockchainTime
                       Test.Util.ChunkInfo
                       Test.Util.FS.Sim.Error
                       Test.Util.FS.Sim.FsTree
                       Test.Util.FS.Sim.MockFS
                       Test.Util.FS.Sim.Pure
                       Test.Util.FS.Sim.STM
                       Test.Util.InvertedMap
                       Test.Util.MockChain
                       Test.Util.Orphans.Arbitrary
                       Test.Util.Orphans.IOLike
                       Test.Util.Orphans.NoUnexpectedThunks
                       Test.Util.QSM
                       Test.Util.QuickCheck
                       Test.Util.Random
                       Test.Util.Range
                       Test.Util.RefEnv
                       Test.Util.Roundtrip
                       Test.Util.SOP
                       Test.Util.Shrink
                       Test.Util.Split
                       Test.Util.Stream
                       Test.Util.TestBlock
                       Test.Util.Tracer
                       Test.Util.WithEq


  build-depends:       base              >=4.9 && <4.13
                     , base16-bytestring
                     , binary            >=0.8   && <0.9
                     , bytestring        >=0.10  && <0.11
                     , cardano-crypto-class
                     , cardano-prelude
                     , cardano-slotting
                     , cborg             >=0.2.2 && <0.3
                     , containers        >=0.5   && <0.7
                     , contra-tracer
                     , cryptonite        >=0.25  && <0.26
                     , deepseq
                     , fgl
                     , generics-sop
                     , graphviz
                     , mtl               >=2.2   && <2.3
                     , QuickCheck
                     , quickcheck-state-machine
                     , random
                     , serialise         >=0.2   && <0.3
                     , text              >=1.2   && <1.3
                     , time
                     , transformers
                     , tree-diff

                     , io-sim-classes
                     , io-sim
                     , typed-protocols
                     , ouroboros-network
                     , ouroboros-network-framework
                     , ouroboros-consensus

  default-language:    Haskell2010
  ghc-options:         -Wall
                       -Wcompat
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wpartial-fields
                       -Widentities
                       -Wredundant-constraints
                       -Wmissing-export-lists
                       -fno-ignore-asserts

test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  other-modules:
                       Test.ThreadNet.Util.Tests
                       Test.Util.Split.Tests

  build-depends:       base
                     , QuickCheck
                     , tasty
                     , tasty-quickcheck

                     , ouroboros-consensus
                     , ouroboros-consensus-test-infra

  default-language:    Haskell2010
  ghc-options:         -Wall
                       -Wcompat
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wpartial-fields
                       -Widentities
                       -Wredundant-constraints
                       -Wmissing-export-lists
                       -fno-ignore-asserts
